<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login-form"}) do |f| %>
    <%= devise_error_messages! %>
    <div class="login-wrap">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key"></i></span>
        <%= f.password_field :password, autofocus: false, autocomplete: "current-password", class: 'form-control', placeholder: 'Password' %>
      </div>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-key"></i></span>
        <%= f.password_field :password_confirmation, autofocus: false, autocomplete: "current-password", class: 'form-control', placeholder: 'Retype Password' %>
      </div>

      <%= f.submit "Sign Up", class: 'btn btn-primary btn-lg btn-block' %>
      <%= render "devise/shared/links" %>
    </div>
<% end %>