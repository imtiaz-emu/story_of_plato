<p id="notice"><%= notice %></p>

<div class="m-bot20">
  <%= link_to 'New Organization', new_organization_path %>
</div>


<div class="row">
  <div class="col-sm-12 col-md-12">
    <section class="panel">
      <header class="panel-heading">
        Organizations Owned by Me
      </header>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>Number of Users</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @owned_orgs.each do |org| %>
            <tr>
              <td><%= link_to org.id, organization_path(org) %></td>
              <td><%= org.name %></td>
              <td><%= truncate(org.try(:description) || "", :length => 50) %></td>
              <td><%= org.users.count + 1 %></td>
              <td><%= link_to 'Show', org %></td>
              <td><%= link_to 'Edit', edit_organization_path(org) %></td>
              <td><%= link_to 'Destroy', org, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>


<div class="row">
  <div class="col-sm-12 col-md-12">
    <section class="panel">
      <header class="panel-heading">
        Organizations I'm added to
      </header>
      <table class="table table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Description</th>
          <th>Number of Users</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @organizations.each do |org| %>
            <tr>
              <td><%= link_to org.id, organization_path(org) %></td>
              <td><%= org.name %></td>
              <td><%= truncate(org.try(:description) || "", :length => 50) %></td>
              <td><%= org.users.count + 1 %></td>
              <td><%= link_to 'Show', org %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>



